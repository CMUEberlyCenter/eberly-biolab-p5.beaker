{
    "tags": {
        "allowUnknownTags": true,
        "dictionaries": ["jsdoc"]
    },
    "source": {
        "include": [
            "package.json",
            "README.md",
            "src/beaker/beaker.js",
            "src/particles/particle.js",
            "src/particles/conjugate_base/conjugate_base.js",
            "src/particles/conjugate_base/strong/strong.js",
            "src/particles/conjugate_base/weak/weak.js",
            "src/particles/proton/proton.js"
        ],
        "exclude": [
             "node_modules",
             "docs"
        ]
    },
    "plugins": [
        "plugins/markdown"
    ],
    "opts": {
        "destination": "docs",
        "tutorials": "tutorials",
        "verbose": true,
        "recurse": false
    }
}
